size = .7rem

.mm
    content " "
    width 100%

    &__button
        content ""
        position absolute
        width size
        height size
        background-color #f0f0f0

        &--top
            top -(size/2)
            transform translate(-50%, -50%), rotate(45deg)
            left 50%

    &__editor
        flex 1
        background-color transparent
        border none
        font-size 1rem
        color text-color
        font-family: 'Fira Mono', monospace;
        resize none
        
        &:focus, &:active
            outline 0

    &__field
        display flex
        flex-direction column
        background transparent
        border 0
        font-size 1rem
        color #353535
        font-family: 'Fira Mono', monospace;
        padding 1rem

        position absolute
        transform translate(-50%, -50%)
        max-width 210px
        background-color #f0f0f0
        border-radius 1rem
        color #353535
        border 2px solid bg-color
        box-shadow 0 0 4px bg-color

        &__editable
            display inline-block

            @keyframes pulse {
                50% {
                    border-color: red;
                }
            }

            &:focus {
                animation: pulse 1.5s cubic-bezier(.215, .61, .355, 1) forwards infinite;
            }
            &:active
                outline 0